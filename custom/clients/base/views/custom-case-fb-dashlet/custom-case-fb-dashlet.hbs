<html>
<head>
<title>Facebook Login JavaScript Example</title>
<link rel="stylesheet" href="custom/clients/base/views/custom-case-fb-dashlet/custom-case-fb-dashlet.css">
<meta charset="UTF-8">
</head>
<body>




<div class="fb {{page_name}}">
<table class="table table-striped dataTable">
<a class="rowaction btn fb_login" href="javascript:void(0);" name="fb_login" track="click:fb_login">
	<i class="fb fa fa-sign-in"></i>
</a>
<a class="rowaction btn fb_logout" href="javascript:void(0);" name="fb_logout" track="click:fb_logout">
	<i class="fb fa fa-sign-out"></i>
</a>
{{#user}}
	<label>&nbsp;&nbsp;&nbsp;Thanks for logging in, <a href="https://www.facebook.com/{{user_id}}" target="_blank"><b>{{first_name}} {{last_name}}</b></a></label>
{{/user}}
	<tr class="">
        <th class="fb header-column from">
            <span>{{str "LBL_EMAIL_FROM" "Emails"}}</span>
        </th>
        <th class="fb header-column message">
            <span>{{str "LBL_MESSAGE"}}</span>
        </th>
    </tr>
	<tbody>
	{{#case_data}}
	<tr>
		<td class="post-from">
				<input type="hidden" name="id" data-id="{{id}}" value="{{id}}" />
				<input type="hidden" name="created_time" data-id="{{id}}" value="{{created_time}}" />
				<input type="hidden" name="from_id" data-id="{{from.id}}" value="{{from.id}}" />
				<span><a href="{{from_id}}" target="_blank">{{from.name}}</a></span>
		</td>
		<td class="post-message">
			<div class="message">{{message}}</div>
			<div class="comments">
                <table class="comments-table table table-striped dataTable">
                    <tr class="header-row">
                        <th class="header-column" colspan="2">
                            <i class="fb fa fa-comments-o fa-1x"></i>
                                <a class="comment-link">{{str "LBL_COMMENTS"}} ({{comments.data.length}})</a>
                            <i class="fb fa fa-thumbs-o-up fa-1x"></i>{{str "LBL_LIKES"}} ({{likes.data.length}})
                        </th>
                    </tr>
                {{#each comments.data}}
                    <tr class="comment head">
                        <td class="info">
                            <span class="from">{{from.name}}</span>
                            <br/>
                            <span class="created_time">{{created_time}}</span>
                        </td>
                    </tr>
                    <tr class="comment body">
                        <td class="message">
                            {{message}}
                            {{#if attachment}}
                            <div class="attachment">
                                <i class="fb fa fa-paperclip fa-1x"></i>
                                {{str "LBL_ATTACHMENT" "Emails"}}: 
                            {{#eq attachment.type "photo"}}
                                <a target="_blank" href="{{attachment.url}}">{{attachment.url}}</a>
                            {{else}}
                                {{#if attachment.url}}
                                    <a target="_blank" href="{{attachment.url}}">{{attachment.url}}</a>
                                {{/if}}
                            {{/eq}}
                            </div>
                            {{/if}}
                            <div class="comments">
                                <table class="comments-table table table-striped dataTable">
                                    <tr class="header-row">
                                        <th class="header-column" colspan="1">
                                            <i class="fb fa fa-comments-o fa-1x"></i>
                                            <a class="comment-link">{{str "LBL_COMMENTS"}} ({{comments.data.length}})</a>
                                            <i class="fb fa fa-thumbs-o-up fa-1x"></i>{{str "LBL_LIKES"}} ({{likes.data.length}})
                                        </th>
                                    </tr>
                                {{#each comments.data}}
                                    <tr class="comment head">
                                        <td class="info">
                                            <span class="from">{{from.name}}</span>
                                            <br/>
                                            <span class="created_time">{{created_time}}</span>
                                        </td>
                                    </tr>
                                    <tr class="comment body">
                                        <td class="message">
                                            {{message}}
                                            {{#if attachment}}
                                            <div class="attachment">
                                                <i class="fb fa fa-paperclip fa-1x"></i>
                                                {{str "LBL_ATTACHMENT" "Emails"}}: 
                                            {{#eq attachment.type "photo"}}
                                                <a target="_blank" href="{{attachment.url}}">{{attachment.url}}</a>
                                            {{else}}
                                                {{#if attachment.url}}
                                                    <a target="_blank" href="{{attachment.url}}">{{attachment.url}}</a>
                                                {{/if}}
                                            {{/eq}}
                                            </div>
                                            {{/if}}
                                            <br />
                                            <span class="likes_container"><i class="fb fa fa-thumbs-o-up fa-1x"></i>{{str "LBL_LIKES"}} ({{likes.data.length}})</span>
                                        </td>
                                    </tr>
                                {{/each}}
                                <tr class="reply">
                                    <td class="message" colspan="2">
                                        <a class="rowaction btn btn-primary reply_button" href="javascript:void(0);" name="reply_button" data-id="{{id}}" track="click:reply_button">
                                            {{str "LBL_BUTTON_REPLY" "Emails"}}
                                        </a>
                                        <textarea placeholder="Write a reply..." name="reply" class="reply-area" rows="1" data-id="{{id}}"></textarea>
                                    </td>
                                </tr>
                                </table>
                            </div>
                        </td>
                    </tr>
                {{/each}}
                <tr class="reply">
                    <td class="message" colspan="2">
                        <a class="rowaction btn btn-primary reply_button" href="javascript:void(0);" name="reply_button" data-id="{{id}}" track="click:reply_button">
                            {{str "LBL_BUTTON_REPLY" "Emails"}}
                        </a>
                        <textarea placeholder="Write a reply..." name="reply" class="reply-area" rows="1" data-id="{{id}}"></textarea>
                    </td>
                </tr>
                </table>
        </div>
		</td>
		
	</tr>

	{{/case_data}}
	</tbody>
</table>
</div>
</body>
</html>